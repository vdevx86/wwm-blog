<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Wwm_Blog::css/blog.css"/>
    </head>
    <body>
        <referenceBlock name="head.additional">
            <block class="Wwm\Blog\Block\Header" name="wwm.blog.header" template="header.phtml" after="-"/>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Wwm\Blog\Block\Index" name="wwm.blog.index" template="index.phtml"/>
        </referenceContainer>
        <referenceContainer name="root">
            <block class="Wwm\Blog\Block\Footer" name="wwm.blog.footer" template="footer.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>
